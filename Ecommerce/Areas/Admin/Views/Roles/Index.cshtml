@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

<partial name="_AddRoleForm" model="new AddRoleViewModel()" />

<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            @*<th>Id</th>*@
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                @*<td>@role.Id</td>*@
                <td>@role.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManagePermissions" asp-route-Id="@role.Id">Manage Permissions</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}